<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Polcirkelleden.Instruction_Page2"
    Title="Instructions" BackgroundColor="#406453">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" VerticalOptions="StartAndExpand">
            <StackLayout>
                
                <WebView x:Name="webView" WidthRequest="600" HeightRequest="400"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

                <StackLayout Margin="10,0,10,20" VerticalOptions="End" HorizontalOptions="End" Orientation="Horizontal">
                    <!--<Button x:Name="nextButton" Text="Next Page"  VerticalOptions="End" HorizontalOptions="End"/>-->
                    <Button x:Name="finishBtn" Text="Got It.!" VerticalOptions="End" HorizontalOptions="End" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
